<Window x:Class="NxDesk.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NxDesk.Client"
        xmlns:actions="clr-namespace:NxDesk.Client.Controls.WindowActions"
        mc:Ignorable="d"
        Height="691" Width="1020"
        MinWidth="1020" MinHeight="691"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">

    <Border x:Name="MainBorder"
         CornerRadius="30"
         Background="#252526"
         SnapsToDevicePixels="True"
         Padding="0">

        <Border.Resources>
            <Style x:Key="ModernIconButton" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Width" Value="34"/>
                <Setter Property="Height" Value="34"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#3E3E42"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#505050"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ModernTextButton" TargetType="Button">
                <Setter Property="Background" Value="#3E3E42"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#505050"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#007ACC"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="DisconnectButton" TargetType="Button" BasedOn="{StaticResource ModernTextButton}">
                <Setter Property="Background" Value="#D13438"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#E04347"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#B02C30"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Border.Resources>

        <Grid x:Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" Background="Transparent" Padding="20,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Invisible drag zone -->
                    <Border Background="Transparent" 
                         Panel.ZIndex="0"
                         Grid.ColumnSpan="3"/>

                    <!-- LOGO -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Nx" FontWeight="Bold" Foreground="#007ACC" FontSize="20"/>
                        <TextBlock Text="Desk" FontWeight="Light" Foreground="White" FontSize="20"/>
                    </StackPanel>

                    <!-- Panel Pre-Sesión -->
                    <StackPanel x:Name="PreSessionControls"
                                Grid.Column="1" Orientation="Horizontal"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="ID de Sala:" Foreground="#C0C0C0"
                                VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="RoomIdTextBox"
                              Width="250"
                              Text="test-room"
                              Style="{StaticResource ModernTextBox}"/>
                        <Button x:Name="ConnectButton"
                             Content="Conectar"
                             Margin="15,0,0,0"
                             Style="{StaticResource ModernButton}"/>
                    </StackPanel>

                    <!-- Panel En-Sesión -->
                    <StackPanel x:Name="InSessionControls"
                                Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="Collapsed">

                        <!-- Botón de Desconectar -->
                        <Button x:Name="DisconnectButton"
                                Content="Desconectar"
                                Style="{StaticResource DisconnectButton}"
                                Margin="20,0,0,0"/>
                    </StackPanel>

                    <!-- Controles de Ventana y Menú -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Panel.ZIndex="1001">

                        <!-- MODIFICACIÓN: Agregado Evento Click y ContextMenu -->
                        <Button x:Name="MenuButton"
                                Click="MenuButton_Click" 
                                Style="{StaticResource ModernIconButton}"
                                ToolTip="Cambiar Pantalla / Opciones"
                                Margin="0,0,5,0">
                            <!-- Definimos el Menú que se abrirá -->
                            <Button.ContextMenu>
                                <ContextMenu x:Name="ScreenContextMenu" 
                                             Placement="Bottom" 
                                             Background="#2D2D30" 
                                             Foreground="White"
                                             BorderBrush="#3E3E42">
                                    <!-- Aquí se llenarán las pantallas dinámicamente -->
                                    <MenuItem Header="Esperando pantallas..." IsEnabled="False"/>
                                </ContextMenu>
                            </Button.ContextMenu>

                            <Path Data="M0,0 L16,0 M0,6 L16,6 M0,12 L16,12"
                                  Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                  StrokeThickness="2"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                        </Button>

                        <actions:WindowActionsControl 
                          VerticalAlignment="Center"
                          Margin="0,0,5,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- VIDEO -->
            <Border Grid.Row="1" Background="#121212" ClipToBounds="True">
                <ContentControl x:Name="ContentArea"
                  Grid.Row="1"
                  Background="#121212"/>
            </Border>

            <!-- FOOTER -->
            <Border Grid.Row="2" Background="Transparent" Padding="12,6">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Estado:" Foreground="White" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    <TextBlock x:Name="StatusTextBlock"
                             Text="Esperando conexión..." Foreground="White" Opacity="0.9"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>