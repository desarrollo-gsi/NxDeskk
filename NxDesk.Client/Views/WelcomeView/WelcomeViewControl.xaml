<UserControl x:Class="NxDesk.Client.Views.WelcomeViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:NxDesk.Client.Views.WelcomeView.ViewModel"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="980">

    <UserControl.DataContext>
        <vm:WelcomeViewModel/>
    </UserControl.DataContext>

    <StackPanel Background="#1E1E1E">

        <Border Padding="0,30,0,30" BorderBrush="#333333" BorderThickness="0,0,0,1">
            <StackPanel HorizontalAlignment="Center">

                <TextBlock Text="Este puesto de trabajo"
                           Foreground="#CCCCCC"
                           FontSize="18"
                           HorizontalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,5,0,0">

                    <TextBlock Text="{Binding MyId}"
                               Foreground="#007ACC" FontSize="40"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>

                    <Button Margin="15,5,0,0"
                            Click="CopyId_Click"
                            ToolTip="Copiar ID"
                            Style="{StaticResource ModernIconButton}"
                            VerticalAlignment="Center">
                        <Path Data="M16,1H4C2.9,1,2,1.9,2,3v14h2V3h12V1zm3,4H8C6.9,5,6,5.9,6,7v14c0,1.1,0.9,2,2,2h11c1.1,0,2-0.9,2-2V7c0-1.1-0.9-2-2-2zm0,16H8V7h11v14z"
                              Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                              Stretch="Uniform"
                              Width="20" Height="20"/>
                    </Button>
                </StackPanel>

            </StackPanel>
        </Border>

        <TextBlock Text="Descubierto"
                   Foreground="White"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="30,20,0,0"/>

        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">

            <ItemsControl ItemsSource="{Binding DiscoveredDevices}">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Margin="20" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="220" Height="140" Margin="10" 
                                CornerRadius="15" Background="#2A2A2A"
                                Cursor="Hand"
                                MouseLeftButtonDown="DeviceCard_MouseLeftButtonDown">

                            <StackPanel VerticalAlignment="Bottom" Margin="12">
                                <TextBlock Text="{Binding Alias}" 
                                           Foreground="White" 
                                           FontSize="16" 
                                           FontWeight="Bold"
                                           TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding ConnectionID}" 
                                           Foreground="#CCCCCC" 
                                           FontSize="14"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </StackPanel>
</UserControl>